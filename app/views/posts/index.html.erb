<!-- unless we are viewing a blog post  -->
<div class="poweress-parallax" id="beforecontact"></div>
  <div id="wrapper">
  <nav id="blogHorizNav", class="topnav">
  <div id="heading"  class="heading" style="text-align:center" onscroll="onScroll()"><b> Blog Posts</b></div>
  </nav>
  </div>

<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @post.each do |post| %>
    <div class="col-sm-11 blogposts">
      <div class="text-center">
        <h2><%= post.title %></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
      </div>

      <div class="text-center">
        <%= raw(post.body).truncate(250) %>
        <b><%= link_to "Continue reading...", post_path(post) %></b>
      </div>
          
      <div class="text-center">
        
        <%= link_to "Edit", edit_post_path(post), class: "btn btn-default" %>
        <%= link_to "Delete", post_path(post), class: "btn btn-danger", data: {:confirm => "Are you sure?"}, method: :delete %>
      </div>

    </div>

    <% end %>
  </div>
</div>
